@{
    ViewBag.Title = "LB3";
}

<!DOCTYPE html>
<html>

<head>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/fast-xml-parser/3.20.3/parser.min.js" integrity="sha512-gVI62Vp7WajK2jl94LrCBg8HbVcAXRx9pUbOfII0d1HGr8ahN2F/sIASFRB+qqBXq7atNBmxiWxxIoOWcDYbow==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <meta charset="utf-8" />
</head>

<body>

    <div class="alert" id="alert">
        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
        <div id="alert-text"></div>
    </div>

    <div class="container">

        <div class="row">

            <div class="col-md-5">
                <h4 class="text-center">ADD STUDENT</h4>

                <form id="add" class="form-horizontal">

                    <div class="">
                        <label for="name">Name</label>

                        <input name="name"
                               id="name"
                               type="text"
                               class="form-control"
                               placeholder="Enter name" />
                    </div>

                    <div class="">
                        <label for="phone">Phone</label>
                        <input name="phone"
                               id="phone"
                               type="text"
                               class="form-control"
                               placeholder="Enter phone number(+375)" />
                    </div>
                    <br />

                    <div class="">
                        <button type="button" class="btn btn-success form-control">ADD</button>
                    </div>
                </form>
            </div>

            <div class="col-md-5 col-md-offset-1">
                <h4 class="text-center">SEARCH</h4>

                <form id="search" class="form-horizontal">
                    <div class="form-group">
                        <label for="name">NAME</label>

                        <input name="name"
                               id="name"
                               type="text"
                               placeholder="Name"
                               class="form-control" />
                    </div>

                    <div class="form-group">
                        <label for="phone">PHONE</label>

                        <input name="phone"
                               id="phone"
                               type="text"
                               placeholder="Phone"
                               class="form-control" />
                    </div>

                    <div class="form-group">
                        <label for="columns">COLUMNS</label>

                        <input name="columns"
                               id="columns"
                               type="text"
                               placeholder="Columns"
                               class="form-control"
                               value="ID,NAME,PHONE" />
                    </div>

                    <div class="form-group">
                        <label for="orderby">ORDER BY NAME</label>

                        <input name="orderby"
                               id="orderby"
                               type="checkbox"
                               class="checkbox-inline"
                               placeholder="Name" />
                    </div>
                    <br/>

                    <div class="row">
                        <div class="col">
                            <label for="offset">OFFSET</label>

                            <input name="offset"
                                   id="offset"
                                   type="number"
                                   class="form-control"
                                   placeholder="Offset"
                                   value="0" />
                        </div>
                        <br />

                        <div class="col">
                            <label for="limit">LIMIT</label>

                            <input name="limit"
                                   id="limit" type="number"
                                   class="form-control"
                                   placeholder="Limit"
                                   value="5" />
                        </div>
                        <br />
                    </div>

                    <div class="row">
                        <div class="col">
                            <label for="minId">MIN ID</label>

                            <input name="minId"
                                   id="minId"
                                   type="number"
                                   class="form-control"
                                   placeholder="minId"
                                   value="0" />
                        </div>
                        <br />

                        <div class="col">
                            <label for="maxId">MAX ID</label>

                            <input name="maxId"
                                   id="maxId"
                                   type="number"
                                   class="form-control"
                                   placeholder="maxId"
                                   value="1000" />
                        </div>
                        <br />
                    </div>

                    <div class="form-group">
                        <label for="globallike">GLOBAL LIKE</label>

                        <input name="globallike"
                               id="globallike"
                               type="text"
                               placeholder="ID+NAME+PHONE"
                               class="form-control" />
                    </div>

                    <div class="form-group">
                        <label for="xml">XML</label>

                        <input name="xml"
                               id="xml"
                               type="checkbox"
                               class="checkbox-inline"
                               placeholder="XML" />
                    </div>

                    <div class="form">
                        <button class="btn btn-success form-control" type="button">Search</button>
                    </div>

                </form>

            </div>

        </div>

    </div>

    <div class="container">

        <div class="row">

            <table id="student-list" class="table">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Name</th>
                        <th>Phone</th>
                        <th>Action</th>
                        <th>Link</th>
                    </tr>
                </thead>

                <tbody>
                </tbody>
            </table>

        </div>

        <nav>
            <ul id="pag" class="pagination justify-content-center">
            </ul>
        </nav>

    </div>

    <div class="modal fade"
         id="update-modal"
         tabindex="-1"
         role="dialog"
         aria-labelledby="myModalLabel">

        <div class="modal-dialog" role="document">
            <div class="modal-content">

                <div class="modal-header">

                    <button type="button"
                            class="close"
                            data-dismiss="modal"
                            aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>

                    <h4 class="modal-title" id="myModalLabel">
                        Edit student #<label id="update-id"></label>
                    </h4>

                </div>

                <div class="modal-body">

                    <form id="update-form">

                        <input name="id" type="hidden" />

                        <div class="form-group">
                            <label for="name">Name</label>

                            <input name="name"
                                   id="name"
                                   type="text"
                                   class="form-control"
                                   placeholder="Enter name" />
                        </div>

                        <div class="form-group">
                            <label for="phone">Phone</label>

                            <input name="phone"
                                   id="phone"
                                   type="text"
                                   class="form-control"
                                   placeholder="Enter phone number" />
                        </div>

                        <div class="form-group">
                            <button type="button" class="btn btn-warning form-control">Update</button>
                        </div>

                    </form>

                </div>

            </div>

        </div>

    </div>
</body>

@Scripts.Render("~/Scripts/Ajax.js")
</html>
